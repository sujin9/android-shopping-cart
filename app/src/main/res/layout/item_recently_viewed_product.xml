<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="woowacourse.shopping.ui.products.uistate.RecentlyViewedProductUIState" />

        <variable
            name="onItemClick"
            type="kotlin.jvm.functions.Function1" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="12dp"
        android:onClick="@{() -> onItemClick.invoke(item.id)}">

        <ImageView
            android:id="@+id/iv_recently_viewed"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/tv_recently_viewed_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/iv_recently_viewed"
            app:layout_constraintStart_toStartOf="@id/iv_recently_viewed"
            app:layout_constraintTop_toBottomOf="@id/iv_recently_viewed"
            tools:text="Product Name " />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>